pipeline {
    agent any

    environment {
        IMAGE_NAME = "candy-spark-game"
        IMAGE_TAG  = "latest"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/vishnubalagani/Dockerized-candy-spark-app.git', branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh """
                        if [ \$(docker ps -aq -f name=${IMAGE_NAME}) ]; then
                            docker rm -f ${IMAGE_NAME}
                        fi
                    """
                    sh "docker run -d -p 8080:80 --name ${IMAGE_NAME} ${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
    }

    post {
        success {
            echo "✅ Docker image built and container started at http://<your-jenkins-host>:8080"
        }
        failure {
            echo "❌ Pipeline failed!"
        }
    }
}
